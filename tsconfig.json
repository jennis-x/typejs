{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["ESNext"],
    "outDir": "dist/types",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": ["./src/**/*"]
}
